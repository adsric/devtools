{
	"name": "npm-tasks",
	"description": "npm cli scripts as a task runner.",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"babel:js": "babel src/js --out-dir .tmp",
		"clean": "rimraf dist/{*.css,**/*.css,*.js,**/*.js}",
		"hash": "hashmark -l 12 -r 'dist/**/*.{js,css}' '{dir}/{name}.{hash}{ext}' --silent",
		"icons": "svg-sprite --symbol --symbol-dest=dist --symbol-sprite=sprite.svg --symbol-inline src/icons/*.svg",
		"minify:css": "postcss -u cssnano -d dist -b .tmp .tmp/*.css .tmp/**/*.css && rimraf .tmp",
		"prefix:css": "postcss -u autoprefixer -d .tmp -b src/css src/css/*.css src/css/**/*.css",
		"uglify:js": "uglifyjs .tmp/file1.js .tmp/file2.js -c -m -o dist/bundle.js && rimraf .tmp",
		"webpack:dev": "NODE_ENV=development webpack",
		"webpack:build": "NODE_ENV=production webpack",
		"setup": "npm install && mkdir -p src/css && mkdir -p src/js",
		"serve": "browser-sync start --server --port 8000 --proxy 'localhost' --files 'dist/**/*'",
		"build:css": "run-s prefix:css minify:css",
		"build:js": "run-s webpack:build",
		"build": "run-s clean build:* hash",
		"dev": "run-s clean build:css webpack:dev watch",
		"watch:css": "onchange \"src/css\" -- run-s build:css",
		"watch:js": "onchange \"src/js\" -- run-s webpack:dev",
		"watch": "run-p serve watch:*"
	},
	"babel": {
		"presets": [
			[
				"env",
				{
					"modules": false
				}
			]
		]
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	],
	"devDependencies": {
		"autoprefixer": "^7.2.5",
		"babel-cli": "^6.26.0",
		"babel-core": "^6.26.0",
		"babel-loader": "^7.1.2",
		"babel-preset-env": "^1.6.1",
		"browser-sync": "^2.23.5",
		"cssnano": "^3.10.0",
		"hashmark": "^5.0.0",
		"npm-run-all": "^4.1.2",
		"onchange": "^3.3.0",
		"postcss-cli": "^4.1.1",
		"rimraf": "^2.6.2",
		"svg-sprite": "^1.3.7",
		"uglify-js": "^3.3.7",
		"webpack": "^3.10.0",
		"xo": "^0.18.2"
	}
}
