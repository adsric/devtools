{
	"name": "npm-it!",
	"version": "1.0.0",
	"private": true,
	"devDependencies": {
		"autoprefixer": "^7.1.1",
		"babel-core": "^6.25.0",
		"babel-loader": "^7.0.0",
		"babel-preset-es2015": "^6.24.1",
		"babel-preset-stage-0": "^6.24.1",
		"browser-sync": "^2.12.8",
		"cssnano": "^3.10.0",
		"hashmark": "^4.1.0",
		"npm-run-all": "^4.0.2",
		"onchange": "^3.2.1",
		"postcss-cli": "^4.1.0",
		"rimraf": "^2.6.1",
		"svg-sprite": "^1.3.7",
		"webpack": "^2.6.1",
		"xo": "^0.18.2"
	},
	"babel": {
		"presets": [
			[
				"es2015",
				{
					"modules": false
				}
			]
		]
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	],
	"jshintConfig": {
		"esversion": 6
	},
	"scripts": {
		"autoprefixer": "postcss -u autoprefixer -d dist src/css/*.css",
		"clean": "rimraf dist/{*.css,*.js,*.map}",
		"cssnano": "postcss -u cssnano -d dist dist/*.css",
		"hash:css": "hashmark -l 12 'dist/*.css' 'dist/{name}.{hash}.css' --silent",
		"icons": "svg-sprite --symbol --symbol-dest=dist --symbol-sprite=sprite.svg --symbol-inline src/icons/*.svg",
		"webpack:dev": "NODE_ENV=development webpack",
		"webpack:build": "NODE_ENV=production webpack",
		"serve": "browser-sync start --server --port 8000 --files \"dist/*.css, dist/*.js, **/*.html, !node_modules/**/*.html\"",
		"build:css": "run-s autoprefixer cssnano hash:css",
		"build:js": "run-s webpack:build",
		"build": "run-s build:*",
		"dev:css": "run-s autoprefixer",
		"dev:js": "run-s webpack:dev",
		"dev": "run-s dev:* watch",
		"watch:css": "onchange \"src/css\" -- run-s build:css",
		"watch:js": "onchange \"src/js\" -- run-s webpack:dev",
		"watch": "run-p serve watch:*",
		"setup": "npm install && mkdir -p src/css && mkdir -p src/js && mkdir -p src/icons"
	}
}
