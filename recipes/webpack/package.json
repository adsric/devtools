{
	"name": "npm-runner",
	"description": "A npm task runner powered with cli packages.",
	"private": true,
	"scripts": {
		"browser-sync": "browser-sync start --server --files '**/*.js, !node_modules/**/*' --port 7777 --proxy 'localhost' --browser 'FirefoxDeveloperEdition'",
		"clean": "rimraf dist/{*.js,**/*.js}",
		"watch:js": "onchange \"src/javascript\" -- run-s webpack:dev",
		"watch": "run-p serve watch:*",
		"webpack:dev": "NODE_ENV=development webpack",
		"webpack:build": "NODE_ENV=production webpack",
		"setup": "npm install && mkdir -p src/javascript",
		"build:js": "run-s webpack:build",
		"build": "run-s clean build:*",
		"dev": "run-s clean webpack:dev watch"
	},
	"babel": {
		"presets": [
			[
				"env",
				{
					"modules": false
				}
			]
		]
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	],
	"devDependencies": {
		"babel-core": "^6.26.0",
		"babel-loader": "^7.1.4",
		"babel-preset-env": "^1.6.1",
		"browser-sync": "^2.23.6",
		"npm-run-all": "^4.1.2",
		"onchange": "^3.3.0",
		"rimraf": "^2.6.2",
		"webpack": "^4.1.1"
	}
}
