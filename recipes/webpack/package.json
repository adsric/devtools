{
	"name": "npm-run",
	"description": "npm run as a task runner powered with npm scripts, uses cli packages.",
	"private": true,
	"scripts": {
		"clean": "rimraf ./dist",
		"build:js": "webpack src/javascript/index.js --devtool source-map --mode production --module-bind js=babel-loader --output-path='./dist' --output-filename='bundle.[hash].js'",
		"build": "run-s clean build:*",
		"watch:js": "webpack src/javascript/index.js --devtool cheap-module-inline-source-map --mode development --module-bind js=babel-loader --output-path='./dist' --output-filename='bundle.js' --watch",
		"watch": "run-p watch:*",
		"dev": "run-s clean watch"
	},
	"babel": {
		"presets": [
			[
				"env",
				{
					"modules": false
				}
			]
		]
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	],
	"devDependencies": {
		"babel-loader": "^7.1.4",
		"babel-preset-env": "^1.6.1",
		"npm-run-all": "^4.1.2",
		"rimraf": "^2.6.2",
		"webpack": "^4.1.1",
		"webpack-cli": "^2.0.12"
	}
}
