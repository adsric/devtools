{
	"name": "npm-runner",
	"description": "A npm task runner powered with cli packages.",
	"private": true,
	"scripts": {
		"clean": "rimraf dist/{*.js,**/*.js}",
		"webpack:dev": "webpack --env development --mode development --watch",
		"webpack:build": "webpack --env production --mode production",
		"setup": "npm install && mkdir -p src/javascript",
		"build:js": "run-s webpack:build",
		"build": "run-s clean build:*",
		"dev": "run-s clean webpack:dev"
	},
	"babel": {
		"presets": [
			[
				"env",
				{
					"modules": false
				}
			]
		]
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	],
	"devDependencies": {
		"babel-core": "^6.26.0",
		"babel-loader": "^7.1.4",
		"babel-preset-env": "^1.6.1",
		"npm-run-all": "^4.1.2",
		"rimraf": "^2.6.2",
		"webpack": "^4.1.1",
		"webpack-cli": "^2.0.12"
	}
}
