{
	"name": "npm-run",
	"description": "npm run as a task runner powered with npm scripts, uses cli packages.",
	"private": true,
	"scripts": {
		"babel-js": "babel src/javascript --out-dir src/javascript-es5",
		"clean": "rimraf ./dist",
		"hash": "hashmark -l 20 -r 'dist/*.js' '{dir}/{name}.{hash}{ext}' --silent",
		"uglify-js": "uglifyjs src/javascript-es5/input1.js src/javascript-es5/input2.js --source-map 'filename=bundle-es5.js.map' --compress --mangle --output dist/bundle-es5.js",
		"build:js": "run-s babel-js uglify-js hash",
		"build": "run-s clean build:*"
	},
	"babel": {
		"presets": [
			[
				"env",
				{
					"modules": false
				}
			]
		]
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	],
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-preset-env": "^1.6.1",
		"hashmark": "^5.0.0",
		"npm-run-all": "^4.1.2",
		"rimraf": "^2.6.2",
		"uglify-es": "^3.3.10"
	}
}
