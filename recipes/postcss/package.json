{
	"name": "npm-run",
	"description": "npm run as a task runner powered with npm scripts, uses cli packages.",
	"private": true,
	"scripts": {
		"clean": "rimraf dist/{**/*.css}",
		"hash": "hashmark -l 20 -r 'dist/*.css' '{dir}/{name}.{hash}{ext}' --silent",
		"compile-css": "postcss src/css/*.css --use postcss-import --use autoprefixer --dir dist",
		"minify-css": "postcss dist/*.css --use cssnano --replace",
		"build:css": "run-s compile-css minify-css hash",
		"build": "run-s clean build:*",
		"watch:css": "postcss src/css/*.css --use postcss-import --use autoprefixer --dir dist --watch",
		"watch": "run-p watch:*",
		"dev": "run-s clean watch"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	],
	"cssnano": {
		"preset": [
			"default",
			{
				"colormin": false
			}
		]
	},
	"devDependencies": {
		"autoprefixer": "^8.1.0",
		"cssnano": "^4.0.0-rc.2",
		"hashmark": "^5.0.0",
		"npm-run-all": "^4.1.2",
		"postcss-cli": "^5.0.0",
		"postcss-import": "^11.1.0",
		"rimraf": "^2.6.2"
	}
}
